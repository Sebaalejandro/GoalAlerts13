<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goalalerts">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoalAlerts">

        <!-- Configura SplashActivity como la actividad principal -->
        <activity android:name=".SplashActivity"
            android:exported="true"> <!-- Especifica que esta actividad puede ser lanzada desde fuera de la aplicación -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Configura MainActivity -->
        <activity android:name=".MainActivity"
            android:exported="true"/> <!-- Especifica que esta actividad puede ser lanzada desde fuera de la aplicación -->

    </application>

</manifest>
